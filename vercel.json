{
    "version": 2,
    "builds": [
      {
        "src": "server.js",
        "use": "@vercel/node"
      },
      {
        "src": "public/**/*",
        "use": "@vercel/static"
      },
      {
        "src": "views/**/*",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      { "src": "/", "dest": "/server.js" },
      { "src": "/public/(.*)", "dest": "/public/$1" },
      { "src": "/assets/(.*)", "dest": "/public/assets/$1" },
      { "src": "/css/(.*)", "dest": "/public/css/$1" },
      { "src": "/scripts/(.*)", "dest": "/public/scripts/$1" }
    ]
  }
  